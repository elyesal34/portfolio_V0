@echo off
echo === Test Batch Script ===
echo.

echo 1. Checking Node.js installation...
where node >nul 2>&1
if %ERRORLEVEL% NEQ 0 (
    echo ERROR: Node.js is not installed or not in PATH
    exit /b 1
)

node --version
if %ERRORLEVEL% NEQ 0 (
    echo ERROR: Failed to get Node.js version
    exit /b 1
)

echo.
echo 2. Running simple test...
echo console.log('Test output from batch script'); > test-batch.js
node test-batch.js
if %ERRORLEVEL% NEQ 0 (
    echo ERROR: Failed to run test script
    exit /b 1
)

echo.
echo 3. Running Vitest...
npx vitest --version
if %ERRORLEVEL% NEQ 0 (
    echo ERROR: Failed to run Vitest
    exit /b 1
)

echo.
echo === Test completed successfully ===
pause
