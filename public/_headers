  Content-Type: image/avif

# HTML files: cache courte pour permettre les updates rapides
/*.html
  Cache-Control: private, max-age=300, stale-while-revalidate=600, must-revalidate
  Content-Type: text/html; charset=utf-8

# API responses: jamais en cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest: cache 1 jour
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

# Service worker: jamais en cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Content-Type: application/javascript; charset=utf-8