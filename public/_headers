  Content-Type: image/avif

# HTML files should not be cached as aggressively
/*.html
/*.html
  Cache-Control: private, max-age=300, stale-while-revalidate=600, must-revalidate
  Content-Type: text/html; charset=utf-8
# API responses
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest and service worker
# The manifest is cached for 1 day (max-age=86400) to allow for efficient updates,
# while the service worker (sw.js) is not cached to ensure clients always receive the latest version.
# Adjust these values if your PWA update strategy changes.
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

/sw.js
  Cache-Control: no-cache, no-store, must-revalidate